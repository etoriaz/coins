<div>
     <video autoplay loop muted plays-inline class="back-video">
      <source src="backcolor.mp4" type="video/mp4">
     </video>

      <div class='wrapper-banner banner-profil'>
        <div class="row d-flex justify-content-center container-banner">
          <div class="card-profile-banner p-3 py-4">
            <div class="text-center">
              <%= image_tag("homme-photo.png", size: '80x80', class: 'profile-image')%>
            </div>
            <div class="text-center mt-3">
              <h2 class="mt-2 mb-0 profile-name"> <%= current_user.username.capitalize %></h5>
              <p class='profession-title'>Crypto enthusiast #HODL</p>
            </div>
          </div>
        </div>
      </div>


<div class="bg-dark-grey">
    <div class="container p-5 d-flex">

      <div class="width-wallet">
          <div class="display-title-x-button">
            <h1 class='text-pink font-rainbows'> Portfolios</h1>
            <div class="wallet-button">
               <a href="#" class="plus-link"><span>+</span></a>
            </div>
          </div>
          <div class="profile-content bg-dark-grey">
            <div class="Portfolios">
              <% @user_portfolios.each do |portfolio| %>
              <div class="container-portfolio-profile mt-3">
                <%= link_to(portfolio_path(portfolio)) do %>
                  <%= image_tag("btc2.png", class: "img-portfolio")%>
                <% end %>
                <%= link_to(portfolio_path(portfolio), style: "text-decoration:none;") do %>
                  <div class="list-info-title"><h4 class="text-card-wallet"> <%= portfolio.name.upcase %></h4></div>
                <% end %>
                <%= link_to(portfolio_path(portfolio), style: "text-decoration:none;") do %>
                  <div class="list-info"><h4 class="text-card-wallet-num">86</h4></div>
                <% end %>
                <%= link_to(portfolio_path(portfolio), style: "text-decoration:none;") do %>
                  <div class="list-info"><h4 class="text-card-wallet">addresses</h4></div>
                <% end %>
                <%= link_to(portfolio_path(portfolio), style: "text-decoration:none;") do %>
                  <i class="fas fa-trash m-3 trash-icone-value"></i>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>


        <div class="chart-view">
          <div class="display-title-x-button">
            <h1 class='text-pink font-rainbows'>View</h1>
          </div>
          <div class="chartCard">
            <div class="chartBox">
              <canvas id="viewCanvas" aria-label="distributionChart" role="img"></canvas>
            </div>
          </div>
        </div>


      </div>
    </div>




  </div>
